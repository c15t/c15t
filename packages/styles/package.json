{
	"name": "@c15t/styles",
	"version": "1.5.0",
	"description": "Shared CSS styles and utilities for C15T consent management components",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./css": {
			"import": "./dist/css/index.css"
		},
		"./components/*": {
			"import": "./dist/components/*"
		},
		"./themes/*": {
			"import": "./dist/themes/*"
		}
	},
	"files": [
		"dist",
		"README.md",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "pnpm prebuild && rslib build && pnpm postbuild",
		"prebuild": "genversion --esm --semi src/version.ts",
		"postbuild": "mkdir -p dist/components && cp -r src/components/*.css dist/components/",
		"dev": "rslib build --watch",
		"clean": "rm -rf dist",
		"lint": "pnpm biome lint ./src",
		"lint:fix": "pnpm biome lint --write ./src",
		"format": "pnpm biome format --write ./src",
		"typecheck": "tsc --noEmit"
	},
	"browserslist": [">0.2%", "not dead", "not op_mini all"],
	"dependencies": {
		"clsx": "2.1.1"
	},
	"devDependencies": {
		"@c15t/typescript-config": "workspace:*",
		"@rslib/core": "^0.12.4",
		"@types/react": "^18.0.0",
		"genversion": "^3.2.0",
		"typescript": "^5.6.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"css",
		"styles",
		"consent",
		"privacy",
		"gdpr",
		"ccpa",
		"theming",
		"components"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/yourusername/c15t.git",
		"directory": "packages/styles"
	},
	"license": "MIT"
}
