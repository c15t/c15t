{
	"extends": "@c15t/typescript-config/base.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
