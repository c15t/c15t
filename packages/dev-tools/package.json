{
	"name": "@c15t/dev-tools",
	"version": "1.8.1",
	"description": "A collection of developer tools and utilities for the c15t ecosystem, currently under active development.",
	"homepage": "https://c15t.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/c15t/c15t.git",
		"directory": "packages/dev-tools"
	},
	"license": "GPL-3.0-only",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "rslib build",
		"check-types": "tsc --noEmit",
		"dev": "rslib build --watch",
		"fmt": "pnpm biome format --write . && pnpm biome check --formatter-enabled=false --linter-enabled=false --write",
		"lint": "pnpm biome lint ./src"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not op_mini all"
	],
	"dependencies": {
		"@radix-ui/react-accordion": "1.2.12",
		"@radix-ui/react-scroll-area": "1.2.10",
		"@radix-ui/react-slot": "1.2.4",
		"@radix-ui/react-switch": "1.2.6",
		"@radix-ui/react-tooltip": "1.2.8",
		"c15t": "workspace:*",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"lucide-react": "0.555.0",
		"motion": "12.23.25",
		"react-draggable": "4.5.0",
		"tailwind-merge": "3.4.0",
		"tsc-alias": "1.8.16",
		"usehooks-ts": "3.1.1",
		"zustand": "5.0.9"
	},
	"devDependencies": {
		"@c15t/typescript-config": "workspace:*",
		"postcss": "8.5.6"
	},
	"peerDependencies": {
		"react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
		"react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
