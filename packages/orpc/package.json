{
	"name": "@c15t/orpc-router",
	"version": "1.0.5",
	"license": "GPL-3.0-only",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js",
			"require": "./dist/server.cjs"
		},
		"./router": {
			"types": "./dist/router.d.ts",
			"import": "./dist/router.js",
			"require": "./dist/router.cjs"
		}
	},
	"main": "./dist/server.cjs",
	"module": "./dist/server.js",
	"types": "./dist/server.d.ts",
	"scripts": {
		"build": "rslib build",
		"check-types": "tsc --noEmit",
		"dev": "rslib build --watch",
		"fmt": "pnpm biome format --write . && biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write",
		"knip": "knip",
		"lint": "pnpm biome lint ./src",
		"start": "node dist/server.cjs",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@opentelemetry/api": "1.8.0",
		"@opentelemetry/resources": "^1.25.1",
		"@opentelemetry/sdk-node": "^0.51.1",
		"@opentelemetry/sdk-trace-base": "^1.25.1",
		"@orpc/contract": "^1.1.1",
		"@orpc/openapi": "^1.1.1",
		"@orpc/server": "1.1.1",
		"@orpc/zod": "^1.1.1",
		"base-x": "^5.0.1",
		"defu": "^6.1.4",
		"drizzle-orm": "^0.41.0",
		"kysely": "^0.27.6",
		"neverthrow": "^8.2.0",
		"superjson": "^2.2.2",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@c15t/typescript-config": "workspace:*",
		"@c15t/vitest-config": "workspace:*",
		"@electric-sql/pglite": "0.2.17",
		"@libsql/kysely-libsql": "^0.4.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.1",
		"@types/node": "20.14.13",
		"@types/pg": "8.11.6",
		"kysely-pglite": "^0.6.1",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	},
	"publishConfig": {
		"access": "public"
	}
}
