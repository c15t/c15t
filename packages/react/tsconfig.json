{
	"extends": "@c15t/typescript-config/react-library.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"types": ["@vitest/browser/matchers"],
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"**/__tests__/**",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.browser.test.ts"
	]
}
