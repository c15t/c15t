{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noImplicitAny": false,
		"strictNullChecks": false,
		"noEmit": true
	},
	"include": [
		"src/**/__tests__/**/*.ts",
		"src/**/__tests__/**/*.tsx",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"src/**/*.browser.test.ts",
		"src/**/*.browser.test.tsx"
	],
	"exclude": ["node_modules"]
}
