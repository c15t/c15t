{
	"name": "@c15t/scripts",
	"version": "1.0.0",
	"description": "Pre-built scripts of popular tools for c15t's script loader.",
	"homepage": "https://c15t.com/docs/frameworks/javascript/script-loader",
	"repository": {
		"type": "git",
		"url": "https://github.com/c15t/c15t.git",
		"directory": "packages/scripts"
	},
	"license": "GPL-3.0-only",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./*": {
			"types": "./dist/*.d.ts",
			"import": "./dist/*.js",
			"require": "./dist/*.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rslib build",
		"check-types": "tsc --noEmit",
		"dev": "rslib build --watch",
		"fmt": "pnpm biome format --write . && biome check --formatter-enabled=false --linter-enabled=false --write",
		"lint": "pnpm biome lint ./src",
		"test": "vitest run --passWithNoTests",
		"test:watch": "vitest"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not op_mini all"
	],
	"devDependencies": {
		"@c15t/react": "workspace:*",
		"@c15t/typescript-config": "workspace:*",
		"@c15t/vitest-config": "workspace:*",
		"@types/react": "19.2.2",
		"c15t": "workspace:*"
	},
	"peerDependencies": {
		"@c15t/react": "workspace:*",
		"react": "^19.0.0 || ^19.0.0-rc || ^18.0.0 || ^17.0.0 || ^16.8.0"
	},
	"peerDependenciesMeta": {
		"@c15t/react": {
			"optional": true
		},
		"react": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
