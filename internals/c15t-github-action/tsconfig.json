{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "**/__tests__/**"]
}
