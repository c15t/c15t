{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node.js",
	"extends": "./base.json",
	"compilerOptions": {
		"module": "preserve",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": ["ES2022"],
		"esModuleInterop": true,
		"noEmit": true,
		"types": ["node"],
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
